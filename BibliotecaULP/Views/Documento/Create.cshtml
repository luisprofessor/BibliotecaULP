@model BibliotecaULP.Models.Documento

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Documento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create"enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class ="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoId" class="control-label"></label>
                <select asp-for="TipoId" class ="form-control" asp-items="ViewBag.TipoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TemaId" class="control-label"></label>
                <select asp-for="TemaId" class ="form-control" asp-items="ViewBag.TemaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MateriaId" class="control-label"></label>
                <select asp-for="MateriaId" class ="form-control" asp-items="ViewBag.MateriaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaSubida" class="control-label"></label>
                <input asp-for="FechaSubida" class="form-control" />
                <span asp-validation-for="FechaSubida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Archivo" accept="video/*,.pdf,.doc,.docx"/> SELECCIONAR Archivo
                <span asp-validation-for="Archivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
