@model BibliotecaULP.Models.Materia

@{
    ViewData["Title"] = "Create";
}


<h1>Create</h1>

<h4>Materia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="MateriaId" class="control-label"></label>
                <input asp-for="MateriaId" class="form-control" />
                <span asp-validation-for="MateriaId" class="text-danger"></span>
            </div>

            <div class="  input-field col s12">

                <select class="" name="CarreraId" required>

                    <option value="" disabled selected>Elegir Carrera </option>

                    @foreach (var item2 in (IList<Carrera>)ViewBag.Carreras)
                    {
                        <option value="@item2.CarreraId">@(item2.CarreraId + " " + item2.Nombre)</option>
                    }

                </select>

                <span asp-validation-for="CarreraId" class="text-danger"></span>

            </div>


            <div class="  input-field col s12">

                <select class="" name="ProfesorId" required>

                    <option value="" disabled selected>Elegir Profesor </option>

                    @foreach (var item2 in (IList<Usuario>)ViewBag.Profesores)
                    {
                        <option value="@item2.UsuarioId">@(item2.UsuarioId + " " + item2.Nombre + " " + item2.Apellido)</option>
                    }

                </select>

                <span asp-validation-for="ProfesorId" class="text-danger"></span>

            </div>



            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {



    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
