@model BibliotecaULP.Models.Usuario

@{
    ViewData["Title"] = "Perfil";
}
<style>
    .emp-profile {
        padding: 3%;
        margin-top: 3%;
        margin-bottom: 3%;
        border-radius: 0.5rem;
        background: #fff;
    }

    .profile-img {
        text-align: center;
    }

        .profile-img img {
            width: 70%;
            height: 100%;
        }

        .profile-img .file {
            position: relative;
            overflow: hidden;
            margin-top: -20%;
            width: 70%;
            border: none;
            border-radius: 0;
            font-size: 15px;
            background: #212529b8;
        }

            .profile-img .file input {
                position: absolute;
                opacity: 0;
                right: 0;
                top: 0;
            }

    .profile-head h5 {
        color: #333;
    }

    .profile-head h6 {
        color: #0062cc;
    }

    .profile-edit-btn {
        border: none;
        border-radius: 1.5rem;
        width: 70%;
        padding: 2%;
        font-weight: 600;
        color: #6c757d;
        cursor: pointer;
    }

    .fotos {
        position: absolute;
        opacity: 0;
        right: 0;
        top: 0;
    }

    .fotosContainer {
        position: relative;
        overflow: hidden;
        width: 100%;
        border: none;
        border-radius: 5px;
        font-size: 15px;
        background: #f0f0f0;
    }
</style>
<h1>Perfil</h1>
<div class="container emp-profile">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Perfil" enctype="multipart/form-data">
                    <div class="profile-img">
                        <img src="@Model.Imagen" alt="Sin foto de perfil" />

                        <div class="file btn btn-lg btn-primary">
                            Elegir foto de perfil
                            <input asp-for="ImagenFile" class="form-control" />
                            <span asp-validation-for="ImagenFile" class="text-danger"></span>
                        </div>
                        <input type="submit" value="Cambiar" class="button" />
                    </div>
                </form>
        </div>
        <div class="col-md-6">
            <div class="profile-head">
                <div class="row">
                    <div class="col-md-6">
                        <label class="font-weight-bold">@Html.DisplayNameFor(model => model.UsuarioId)</label>
                    </div>
                    <div class="col-md-6">
                        <p>@Html.DisplayFor(model => model.UsuarioId)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Nombre)</label>
                    </div>
                    <div class="col-md-6">
                        <p>@Html.DisplayFor(model => model.Nombre)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Apellido)</label>
                    </div>
                    <div class="col-md-6">
                        <p>@Html.DisplayFor(model => model.Apellido)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Descripcion)</label>
                    </div>
                    <div class="col-md-6">
                        <p>@Html.DisplayFor(model => model.Descripcion)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Email)</label>
                    </div>
                    <div class="col-md-6">
                        <p>@Html.DisplayFor(model => model.Email)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="font-weight-bold">@Html.DisplayNameFor(model => model.RolNombre)</label>
                    </div>
                    <div class="col-md-6">
                        <p>@Html.DisplayFor(model => model.RolNombre)</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            @Html.ActionLink("Editar", "Edit", new { id = Model.UsuarioId }, new { @class = "button btn" })
        </div>
    </div>
</div>

